{
  "manifest_version": 3,
  "name": "TrueVolume for YouTube",
  "version": "0.1",
  "description": "Smooth, natural volume control for YouTube.",
  "action": {
    "default_popup": "pages/index.html"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "utils/volume.js",
        "utils/player.js",
        "utils/youtubeUi.js",
        "utils/slider.js",
        "scripts/content.js"
      ],
      "matches": ["https://www.youtube.com/watch*"]
    }
  ]
}
